{{> bg-block}}

<div class="row">
    <div class="col-md-7 text-light">
        <p> Welcome to Handle Bar. <br>
            Social Media for Drinkers.
        </p>
    </div>
    <div class="col-md-5">



        <div class="card-overlay">

            <form name="myForm" action="/auth/signup" method="post">
                <div class="container" id="mainsignup">

                    <h3 class="signuptitle text-center">Sign Up</h3>
                    <div class="row">
                        <div class="input-field col s6">
                            <label for="first_name">First Name:</label>
                            <input id="firstname" type="text" class="validate" name="firstname" required>
                        </div>
                    </div>
                    <div class="row">
                        <div class="input-field col s6">
                            <label for="last_name"> Last Name:</label>
                            <input id="lastname" type="text" class="validate" name="lastname" required>

                        </div>
                    </div>

                    <div class="row">
                        <div class="input-field col s6">
                            <label for="age">Age:</label>
                            <input type="text" class="validate" name="age" id="age" required>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="radio-inline mr-3"><input type="radio" class="validate" name="gender" checked>Male</label>
                        <label class="radio-inline"><input type="radio" class="validate" name="gender mr-3">Female</label>
                    </div>

                    <div class="row">
                        <div class="input-field col s6">
                            <label for="email"> Email:</label>
                            <input id="email" type="email" class="validate" name="email" required>

                        </div>
                    </div>
                    <div class="row">
                        <div class="input-field col s6">
                            <label for="password"> Password:</label>
                            <input id="password" type="password" class="validate" name="password" required>

                        </div>
                    </div>
                    <div class="row">
                        <div class="input-field col s6">
                            <label for="password2"> Password:</label>
                            <input id="password2" type="password" class="validate" name="password2" required>

                        </div>
                    </div>
                    <div class="row">
                        <div class="col s12">
                            <input class="btn ml-5" type="submit" value="Submit">
                        </div>
                    </div>
                </div>
            </form>
        </div>


    </div>
</div>